{

	"manifest_version": 2,
	"name": "Detect Cloudflare PA",
	"description": "Displays an icon on the adress bar whenever the current page uses Cloudflare. Detection is performed by analyzing the response headers of all requests.",
	"version": "0.9.0",

	"applications": {
		"gecko": {
			"id": "Detect-Cloudflare-PA@cm.org",
			"strict_min_version": "52.0"
		}
	},

	"icons": {
		"16": "icons/cf-orange-16.png",
		"32": "icons/cf-orange-32.png",
		"64": "icons/cf-orange-64.png"
	},

	"permissions": [
		"webRequest",
		"webNavigation",
		"tabs",
		"<all_urls>"
	],

	"background": {
		"scripts": [ "background.js" ]
	},

	"page_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/cf-orange-16.png",
			"32": "icons/cf-orange-32.png",
			"64": "icons/cf-orange-64.png"
		},
		"default_title": "",
		"default_popup": "popup.html"
	}

}
